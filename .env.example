# Auth0 Configuration
# IMPORTANT: Use "shared audience" strategy
# Both MCP server and API use the same audience: https://graph.konnektr.io
# The token the agent gets will work for both MCP server and API calls

AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://graph.konnektr.io
AUTH0_ISSUER=
AUTH_ENABLED=true

# Optional: Only needed for token exchange (advanced, not currently used)
# AUTH0_CLIENT_ID=
# AUTH0_CLIENT_SECRET=
# USE_TOKEN_EXCHANGE=false

# API Configuration
API_BASE_URL_TEMPLATE=https://{resource_id}.api.graph.konnektr.io
API_TIMEOUT_SECONDS=30

# MCP Server Configuration
MCP_RESOURCE_URL=https://mcp.graph.konnektr.io
